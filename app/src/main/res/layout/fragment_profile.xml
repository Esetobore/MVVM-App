<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/black">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="70dp"
            android:text="Name is here"
            android:textColor="@color/white"
            android:textSize="29sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/TextviewFN_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Full Name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextviewFN_profile"
        android:layout_centerHorizontal="true"
        android:id="@+id/FNCard_view_Profile"
        android:elevation="7dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#CCB6B6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:id="@+id/firstname_Profile"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:id="@+id/Lastname_profile"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/TextviewEmail_Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FNCard_view_Profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextviewEmail_Profile"
        android:layout_centerHorizontal="true"
        android:elevation="7dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#CCB6B6">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="esetobore1@gmail.com"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>